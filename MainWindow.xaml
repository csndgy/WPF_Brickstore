<Window x:Class="legoFeladat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:legoFeladat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#373f51">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Button Background="#3D394F" Foreground="White" Content="Fájl Megnyitása" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Margin="10" Click="Button_Click_1"/>
         <DataGrid AutoGenerateColumns="False" Grid.Row="2" Background="#998fc7">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#5B5577"/>
                    <Setter Property="Foreground" Value="#BCB8CF"/>
                    <!-- Fejléc szövegszíne -->
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ItemID" Width="*"/>
                <DataGridTextColumn Header="ItemName" Width="*"/>
                <DataGridTextColumn Header="CategoryName" Width="*"/>
                <DataGridTextColumn Header="ColorName" Width="*"/>
                <DataGridTextColumn Header="Qty" Width="*"/>
                </DataGrid.Columns>
        </DataGrid>

        <TextBox Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="200" Margin="200 0 0 0"/>
    </Grid>
</Window>

<Window x:Class="legoFeladat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:legoFeladat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#5B5577">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Button Content="Fájl Megnyitása" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10" Click="OpenFile_Click"/>
         <DataGrid AutoGenerateColumns="False" Grid.Row="2" Background="#998fc7">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ItemID" Width="150"/>
                <DataGridTextColumn Header="ItemName" Width="150"/>
                <DataGridTextColumn Header="CategoryName" Width="150"/>
                <DataGridTextColumn Header="ColorName" Width="150"/>
                <DataGridTextColumn Header="Qty" Width="150"/>
                </DataGrid.Columns>
        </DataGrid>

        <TextBox Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="200" Margin="200 -10 0 0"/>
    </Grid>
</Window>
